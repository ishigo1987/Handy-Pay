<?xml version='1.0' encoding='utf-8'?>
<widget id="com.application.handy" version="0.1.0">
  <name>Handy Pay</name>
  <description>
    Example Tabris.js App
  </description>
  <author email="stephnguets@yahoo.fr">
    ishigo1987
  </author>
  <preference name="EnableDeveloperConsole" value="$IS_DEBUG" />
  <platform name="android">
    <!-- Changes mades only on TabrisJS 3.0+ -->
    <resource-file src="res/android/values/handy_theme.xml" target="app/src/main/res/values/handy_theme.xml" />
    <preference name="Theme" value="@style/Theme.HandyPay" />
    <preference name="AndroidPersistentFileLocation" value="Internal" />
    <icon src="res/android/mdpi.png" density="mdpi" />
    <icon src="res/android/hdpi.png" density="hdpi" />
    <icon src="res/android/xhdpi.png" density="xhdpi" />
    <icon src="res/android/xxhdpi.png" density="xxhdpi" />
    <icon src="res/android/xxxhdpi.png" density="xxxhdpi" />
  </platform>
</widget>
